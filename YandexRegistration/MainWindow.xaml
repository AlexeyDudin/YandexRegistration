<metro:MetroWindow
    x:Class="YandexRegistration.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:YandexRegistration.Converters"
    xmlns:customControls="clr-namespace:YandexRegistration.CustomControls.MultiSelectTreeView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:YandexRegistrationModel.Enums;assembly=YandexRegistrationModel"
    xmlns:local="clr-namespace:YandexRegistration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:vm="clr-namespace:YandexRegistrationViewModel;assembly=YandexRegistrationViewModel"
    Title="Yandex регистратор"
    Width="1024"
    Height="768"
    d:DataContext="{d:DesignInstance vm:MainViewModel}"
    Closing="MetroWindow_Closing"
    mc:Ignorable="d">
    <metro:MetroWindow.Resources>
        <converters:NullToVisibleConverter x:Key="NullToVisibleConverter" />
        <converters:NullToTextConverter x:Key="NullToTextConverter" />
        <converters:StatusToBrushConverter x:Key="StatusToBrushConverter" />
    </metro:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem
                    x:Name="SaveTaskButton"
                    Click="SaveTaskButton_Click"
                    Header="Сохранить" />
                <MenuItem
                    x:Name="OpenTaskButton"
                    Click="OpenTaskButton_Click"
                    Header="Открыть" />
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <customControls:MultiSelectTreeView
                    x:Name="TreeViewTasks"
                    ItemsSource="{Binding SortedTasks}"
                    SelectedItemChanged="TreeViewTasks_SelectedItemChanged">
                    <customControls:MultiSelectTreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding}">
                            <TextBlock FontWeight="Bold" Text="{Binding Key, Converter={StaticResource NullToTextConverter}, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <!--  Шаблон для дочерних элементов (задач)  -->
                                    <Grid Background="{Binding Status, Converter={StaticResource StatusToBrushConverter}}">
                                        <TextBlock Margin="5" Text="{Binding StringId}" />
                                    </Grid>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </customControls:MultiSelectTreeView.ItemTemplate>
                </customControls:MultiSelectTreeView>
                <!--<DataGrid
                    x:Name="DataGridTasks"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    ItemsSource="{Binding SortedTasks}"
                    SelectedItem="{Binding SelectedTask, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Expander Header="{Binding Key, Converter={StaticResource NullToTextConverter}}">
                                        <DataGrid
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="False"
                                            CanUserDeleteRows="False"
                                            ItemsSource="{Binding}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Path=StringId, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Header="Задания">
                                                    <DataGridTextColumn.CellStyle>
                                                        <Style BasedOn="{StaticResource MahApps.Styles.DataGridCell}" TargetType="DataGridCell">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:YandexTaskStatus.Error}">
                                                                    <Setter Property="Background" Value="Red" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:YandexTaskStatus.Started}">
                                                                    <Setter Property="Background" Value="LightBlue" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:YandexTaskStatus.Ok}">
                                                                    <Setter Property="Background" Value="LightGreen" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </DataGridTextColumn.CellStyle>
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Expander>
