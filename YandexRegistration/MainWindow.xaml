                    </DataGrid.Columns>
                </DataGrid>-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="NewTaskButton"
                        Grid.Column="0"
                        Margin="5"
                        Click="NewTaskButton_Click">
                        <Button.Content>
                            <TextBlock
                                Text="ДОБАВИТЬ ЗАДАНИЕ"
                                TextAlignment="Center"
                                TextWrapping="WrapWithOverflow" />
                        </Button.Content>
                    </Button>
                    <Button
                        x:Name="CloneTasksButton"
                        Grid.Column="1"
                        Margin="5"
                        Click="CloneTasksButton_Click">
                        <Button.Content>
                            <TextBlock
                                Text="СКЛОНИРОВАТЬ ЗАДАНИЕ"
                                TextAlignment="Center"
                                TextWrapping="WrapWithOverflow" />
                        </Button.Content>
                    </Button>
                    <Button
                        x:Name="RemoveTasksButton"
                        Grid.Column="2"
                        Margin="5"
                        Click="RemoveTasksButton_Click">
                        <Button.Content>
                            <TextBlock
                                Text="УДАЛИТЬ ЗАДАНИЕ"
                                TextAlignment="Center"
                                TextWrapping="WrapWithOverflow" />
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
            <GridSplitter Grid.Column="1" />
            <Grid Grid.Column="2" Visibility="{Binding SelectedTask, Converter={StaticResource NullToVisibleConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="Запускать с помощью: " />
                    <RadioButton
                        Margin="5"
                        Content="Chrome"
                        IsChecked="{Binding Path=SelectedTask.IsChromeBrowser, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    <RadioButton
                        Margin="5"
                        Content="Yandex browser"
                        IsChecked="{Binding Path=SelectedTask.IsYandexBrowser, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Margin="5"
                        VerticalContentAlignment="Center"
                        metro:TextBoxHelper.AutoWatermark="True"
                        metro:TextBoxHelper.UseFloatingWatermark="True"
                        metro:TextBoxHelper.Watermark="Имя пользователя при регистрации"
                        Text="{Binding SelectedTask.UserNameForRegistration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox
                        Grid.Column="1"
                        Margin="5"
                        VerticalContentAlignment="Center"
                        metro:TextBoxHelper.AutoWatermark="True"
                        metro:TextBoxHelper.UseFloatingWatermark="True"
                        metro:TextBoxHelper.Watermark="Фамилия пользователя при регистрации"
                        Text="{Binding SelectedTask.SecondNameForRegistration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <TextBox
                    Grid.Row="2"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    metro:TextBoxHelper.AutoWatermark="True"
                    metro:TextBoxHelper.UseFloatingWatermark="True"
                    metro:TextBoxHelper.Watermark="Реферальная ссылка"
                    Text="{Binding SelectedTask.ReferalUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <DataGrid
                    Grid.Row="3"
                    AutoGenerateColumns="False"
                    CanUserAddRows="True"
                    ItemsSource="{Binding Path=SelectedTask.Queries, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Header="Искомые запросы" />
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock
                    Grid.Row="4"
                    Text="{Binding SelectedTask.ErrorMessage, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="WrapWithOverflow" />
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="120" />
            </Grid.ColumnDefinitions>

            <metro:NumericUpDown
                Margin="5"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                metro:TextBoxHelper.AutoWatermark="True"
                metro:TextBoxHelper.UseFloatingWatermark="True"
                metro:TextBoxHelper.Watermark="Количество одновременных процессов"
                metro:TextBoxHelper.WatermarkAlignment="Left"
                Minimum="1"
                TextAlignment="Left"
                Value="{Binding CountThreads}" />

            <Button
                x:Name="StartButton"
                Grid.Column="1"
                Margin="5"
                Click="StartButton_Click"
                Content="Запуск" />
        </Grid>
    </Grid>
</metro:MetroWindow>
