<metro:MetroWindow
    x:Class="YandexRegistationAddon.SmsRequester"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YandexRegistationAddon"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    x:Name="SmsRequesterWindow"
    Title="Ожидание получения СМС"
    Width="400"
    Height="200"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                <TextBlock
                    Margin="5,0"
                    Text="Ожидание ввода СМС для телефона: "
                    TextWrapping="WrapWithOverflow" />
                <TextBlock Margin="5,0" Text="{Binding ElementName=SmsRequesterWindow, Path=PhoneNumber, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <Grid Grid.Column="1">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Margin="5" Text="Осталось: " />
                    <TextBlock Margin="5" Text="{Binding ElementName=SmsRequesterWindow, Path=TimeSpend, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Margin="5" Text=" секунд" />
                </StackPanel>
            </Grid>
        </Grid>
        <TextBox
            Grid.Row="1"
            Margin="5"
            metro:TextBoxHelper.AutoWatermark="True"
            metro:TextBoxHelper.UseFloatingWatermark="True"
            metro:TextBoxHelper.Watermark="Код из СМС"
            Text="{Binding ElementName=SmsRequesterWindow, Path=Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Grid.Row="2"
            Width="150"
            Margin="5"
            HorizontalAlignment="Right"
            Click="Button_Click"
            Content="Подтвердить" />
    </Grid>
</metro:MetroWindow>
